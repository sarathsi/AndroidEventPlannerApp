<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout android:orientation="vertical"
		android:layout_width="match_parent" android:layout_height="wrap_content">


		<TextView android:id="@+id/view_heading"
			android:layout_width="match_parent" android:layout_height="wrap_content"
			android:gravity="center_horizontal" android:paddingBottom="5dip"
			android:singleLine="true" android:textStyle="bold" android:textSize="24sp"
			android:textColor="#ffdd00" />


		<!-- event name -->
		<TextView android:id="@+id/event_name" android:layout_width="match_parent"
			android:layout_height="wrap_content" android:gravity="center_horizontal"
			android:paddingBottom="5dip" android:singleLine="true"
			android:textStyle="bold" android:textSize="24sp" android:textColor="#ffff00" />

		<TextView android:id="@+id/txtParticipants"
			android:layout_width="match_parent" android:text="Participants"
			android:layout_height="wrap_content" android:paddingBottom="5dip"
			android:singleLine="true" android:textStyle="bold" android:textSize="20sp"
			android:textColor="#ffff00" />

		<TextView android:id="@+id/voting_participant_list"
			android:layout_width="match_parent" android:layout_height="wrap_content"
			android:paddingBottom="5dip" android:singleLine="false"
			android:textSize="20sp" android:gravity="center_horizontal" />


		<CheckBox android:id="@+id/attending_check" android:text="I am attending"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />

		<!-- Place options -->
		<TextView android:layout_width="match_parent" android:text="Select Place"
			android:layout_height="wrap_content" android:paddingBottom="5dip"
			android:singleLine="true" android:textStyle="bold" android:textSize="20sp"
			android:textColor="#ffff00" />

		<CheckBox android:id="@+id/place1_check"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
		<CheckBox android:id="@+id/place2_check"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />


		<!-- date & time options android:gravity="center_horizontal" -->
		<TextView android:layout_width="match_parent" android:text="Select Date-Time"
			android:layout_height="wrap_content" android:paddingBottom="5dip"
			android:singleLine="true" android:textStyle="bold" android:textSize="20sp"
			android:textColor="#ffff00" />

		<CheckBox android:id="@+id/datetime1_check"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
		<CheckBox android:id="@+id/datetime2_check"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />


		<Button android:id="@+id/btnSendReply" android:layout_width="match_parent"
			android:layout_height="wrap_content" android:text="@string/send_reply"
			android:textColor="#833" android:textStyle="bold" />


	</LinearLayout>

</ScrollView>

